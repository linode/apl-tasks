    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^9.0.6",
    "@kubernetes/client-node": "^0.12.3",
    "@redkubes/gitea-client-node": "1.1.1",
    "@redkubes/harbor-client-node": "^2.2.1",
    "@redkubes/keycloak-client-node": "^15.0.0",
    "async-retry": "^1.3.1",
    "aws-sdk": "^2.742.0",
    "axios": "^0.21.1",
    "bluebird": "^3.7.2",
    "cookie": "^0.4.1",
    "drone-node": "^2.1.0",
    "envalid": "^6.0.2",
    "js-yaml": "^3.14.0",
    "lodash": "^4.17.21",
    "lowdb": "^1.0.0",
    "morgan": "^1.10.0",
    "node-fetch": "^2.6.1",
    "ts-custom-error": "^3.2.0"
  },
  "description": "Tasks needed by the Otomi Container Platform to glue all the pieces together.",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@hkdobrev/run-if-changed": "^0.3.1",
    "@types/async-retry": "^1.4.2",
    "@types/chai": "^4.2.16",
    "@types/chai-as-promised": "^7.1.3",
    "@types/express": "^4.17.7",
