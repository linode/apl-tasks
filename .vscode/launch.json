{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "program": "${workspaceFolder}/${relativeFile}",
      "skipFiles": ["<node_internals>/**"]
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to dev:debug",
      "protocol": "inspector",
      "port": 4321,
      "restart": true,
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": ["src/**/*.test.ts"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "env": {
        "NODE_ENV": "test"
      },
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["${file}"],
      "env": {
        "NODE_ENV": "test"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Drone task",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:drone-dev"],
      "cwd": "${workspaceRoot}",
      "env": {
        "DEBUG": "*",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug certs-aws Tasks",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:certs-aws-dev"],
      "env": {
        "DEBUG": "*",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0",
        "REGION": "eu-central-1"
      },
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug copy-certs task",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:copy-certs-dev"],
      "cwd": "${workspaceRoot}",
      "env": {
        "DEBUG": "*",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Gitea task",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:gitea-dev"],
      "cwd": "${workspaceRoot}",
      "env": {
        "DEBUG": "*",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Gitea drone auth task",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:gitea-drone-auth-dev"],
      "cwd": "${workspaceRoot}",
      "env": {
        "DEBUG": "*",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Harbor task",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:harbor-dev"],
      "cwd": "${workspaceRoot}",
      "env": {
        "DEBUG": "*",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Keycloak task",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:keycloak-dev"],
      "cwd": "${workspaceRoot}",
      "env": {
        "DEBUG": "*",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      },
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug wait-for task",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:wait-for-dev"],
      "cwd": "${workspaceRoot}",
      "env": {
        "DEBUG": "*",
        "NODE_TLS_REJECT_UNAUTHORIZED": "0"
      },
      "console": "integratedTerminal"
    }
  ]
}
