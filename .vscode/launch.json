{
  "version": "0.2.0",
  "configurations": [

    {
      "type": "node",
      "request": "attach",
      "name": "Attach to dev:debug",
      "protocol": "inspector",
      "port": 4321,
      "restart": true,
      "cwd": "${workspaceRoot}"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/.bin/mocha",
      "args": ["src/**/*.test.ts"],
      "resolveSourceMapLocations": ["${workspaceFolder}/**", "!**/node_modules/**"],
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_ENV": "test",
        "NODE_EXTRA_CA_CERTS": "${workspaceFolder}/.env.ca"
      },
      "internalConsoleOptions": "openOnSessionStart"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Current File",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": ["${file}"],
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_ENV": "test",
        "NODE_EXTRA_CA_CERTS": "${workspaceFolder}/.env.ca"
      },
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug certs-aws Tasks",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:certs-aws-dev"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_EXTRA_CA_CERTS": "${workspaceFolder}/.env.ca"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug secrets operator",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "operator:secrets-dev"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug gitea operator",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "operator:gitea-dev"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "env" : {
        "KUBECONFIG": "/path/to/your/kubeconfig.yaml",
        "GITEA_URL" : "http://localhost",
        "GITEA_URL_PORT" : "8082",
        "GITEA_OPERATOR_NAMESPACE" : "gitea-app",
      },
      "preLaunchTask": "port-forward-gitea"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug copy-certs task",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:copy-certs-dev"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_EXTRA_CA_CERTS": "${workspaceFolder}/.env.ca"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Harbor task",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:harbor-dev"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
      // "env": {
      //   "NODE_EXTRA_CA_CERTS": "${workspaceFolder}/.env.ca"
      // }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug Keycloak task",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:keycloak-dev"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_EXTRA_CA_CERTS": "${workspaceFolder}/.env.ca"
      }
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug wait-for task",
      "runtimeExecutable": "npm",
      "runtimeArgs": ["run-script", "tasks:wait-for-dev"],
      "cwd": "${workspaceRoot}",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "NODE_EXTRA_CA_CERTS": "${workspaceFolder}/.env.ca"
      }
    }
  ]
}
